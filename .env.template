# MT5 Trading Bot Configuration
# Copy this file to .env and modify the values

# Basic Authentication for Web UI
BASIC_USER=admin
BASIC_PASS=your_secure_password_here

# Webhook Security
WEBHOOK_TOKEN=your_secure_webhook_token_here
EXTERNAL_BASE_URL=https://yourdomain.com

# Server Configuration
PORT=5000
DEBUG=False
SECRET_KEY=your_secret_key_here

# MT5 Configuration
MT5_MAIN_PATH=C:\Program Files\MetaTrader 5\terminal64.exe
MT5_INSTANCES_DIR=C:\trading_bot\mt5_instances
MT5_PROFILE_SOURCE=C:\Users\%USERNAME%\AppData\Roaming\MetaQuotes\Terminal\XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Instance Management
DELETE_INSTANCE_FILES=False

# Email Notifications (Optional)
EMAIL_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=your_email@gmail.com
TO_EMAILS=alert1@gmail.com,alert2@gmail.com

# Rate Limiting
RATE_LIMIT_WEBHOOK=10 per minute
RATE_LIMIT_API=100 per hour

# Symbol Mapping
SYMBOL_FETCH_ENABLED=False
FUZZY_MATCH_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5